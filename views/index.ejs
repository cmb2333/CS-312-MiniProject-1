<!DOCTYPE html>
<head>
    <title>Blog Home</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<div class="header">
    <h1>Blog Posts</h1>
</div>

<div class="topnav">
    <a href="/posts/new">Create a New Post</a>
</div>

<div class="row">
    <% posts.forEach(post => { %>
        <div class="card">
            <h2><%= post.title %></h2>
            <p>Posted by <%= post.name %> on <%= post.postedOn.toDateString() %></p>
            <div class="fakeimg" style="height:200px;">Image Placeholder</div>
            <p><%= post.content %></p>
            <div class="topnav">
                <a href="/posts/edit/<%= post.id %>">Edit</a>
                <form action="/posts/delete/<%= post.id %>" method="POST" style="display: inline;">
                    <button type="submit">Delete</button>
                </form>
            </div>
        </div>
    <% }) %>
</div>

<div class="footer">
    <h2>Footer</h2>
</div>

</body>
</html>


