<h1>Blog Posts</h1>
<% posts.forEach(post => { %>
  <div>
    <h2><%= post.title %></h2>
    <p>Posted by <%= post.name %> on <%= post.postedOn.toDateString() %></p>
    <p><%= post.content %></p>
    <a href="/posts/edit/<%= post.id %>">Edit</a>
    <form action="/posts/delete/<%= post.id %>" method="POST">
      <button type="submit">Delete</button>
    </form>
  </div>
<% }) %>

<a href="/posts/new">Create a New Post</a>
