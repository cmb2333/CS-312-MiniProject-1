<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Post</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>

<div class="header">
  <h1>Edit Post</h1>
</div>

<div class="row">
  <div class="leftcolumn">
    <div class="card">
      <form action="/posts/edit/<%= post.id %>" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= post.name %>" required>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= post.title %>" required>
        <label for="content">Content:</label>
        <textarea id="content" name="content" required><%= post.content %></textarea>
        <button type="submit">Update Post</button>
      </form>
    </div>
  </div>

  <div class="rightcolumn">
    <div class="card">
      <h2 class="section-title">Top Artists</h2>
      <img src="/images/sleepToken.jpg" alt="Artist 1" class="artist-cover">
      <img src="/images/badOmens.jpg" alt="Artist 2" class="artist-cover">
      <img src="/images/fallingInReverse.jpg" alt="Artist 3" class="artist-cover">
    </div>
  </div>
</div>

<div class="footer">
  <h2>Footer</h2>
</div>

</body>
</html>

